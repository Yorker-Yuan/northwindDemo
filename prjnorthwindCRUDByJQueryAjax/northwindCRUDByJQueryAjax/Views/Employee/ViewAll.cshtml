@model IEnumerable<northwindCRUDByJQueryAjax.Models.Employees>

@{
    ViewBag.Title = "ViewAll";
    Layout = null;
}


<table class="table table-striped table-condensed" id="employeeTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fPosition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fOffice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fSalary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.fName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fPosition)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fOffice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fSalary)
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit","Employee",new { id=item.fEmpId})')"><i class="fa fa-pencil fa-lg"></i> </a>
                    <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete","Employee",new { id=item.fEmpId})')"><i class="fa fa-trash fa-lg"></i> </a>
                </td>
            </tr>
        }
    </tbody>
</table>
